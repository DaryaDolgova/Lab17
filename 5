#include <iostream>
#include <cmath>

using namespace std;

int main()

{
	int  N, i, j, k, x1, y1, x2, y2, x3, y3;
	double P , a, b, c;
	cout << "N= " ;
	cin >> N;
	int* x = new int[N];
	int* y = new int[N];
	P=0;
	for (i = 0; i < N; i++) {
		cin >> x[i]; cin >> y[i];
	}
	x1 = y1 = x2 = y2 = x3 = y3 = 0;
	for (i = 0; i < N-2; ++i) {
		for (j = i+1; j < N-1; ++j) {
			for (k = i+2; k < N; ++k) {
				a = sqrt(pow((x[i] - x[j]), 2) + pow((y[i] - y[j]), 2));
				b = sqrt(pow((x[i] - x[k]), 2) + pow((y[i] - y[k]), 2));
				c = sqrt(pow((x[j] - x[k]), 2) + pow((y[j] - y[k]), 2));
				if (a<b+c && b<a+c && c<a+b && a+b+c>P) {
					P = a + b + c;
					x1 = x[i];
					y1 = y[i];
					x2 = x[j];
					y2 = y[j];
					x3 = x[k];
					y3 = y[k];
				}
			}
		}
	}
	cout << "MAX P = " << P << endl;
	cout << "vershiny: " << endl;
	cout << x1 << ";" << y1 << endl;
	cout << x2 << ";" << y2 << endl;
	cout << x3 << ";" << y3 << endl;

	return 0;

}
